{
  "name": "@samatech/vue-store",
  "version": "0.5.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "types": "dist/index.d.mts",
  "files": [
    "lib",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samatechtw/vue-store.git"
  },
  "scripts": {
    "build": "rm -rf dist/* && tsup lib/index.ts --dts --format esm,cjs",
    "all:dev": "pnpm --stream --parallel --filter '*vue-store*' -w run dev",
    "dev": "tsc --watch",
    "example:dev": "pnpm --filter '*example' run dev",
    "test": "jest --config=jest.config.ts",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier -w \"{**/*,*}.{ts,js,json}\"",
    "format:check": "prettier --check \"{**/*,*}.{ts,js,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-angular": "^17.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.16.8",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "8.51.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-node": "11.1.0",
    "husky": "^7.0.0",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "peerDependencies": {
    "vue": ">=3.2.0"
  }
}
